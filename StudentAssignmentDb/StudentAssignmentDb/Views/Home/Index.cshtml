@model IEnumerable<StudentEntities.CustomEntities.StudentModel>


@*@using X.PagedList;
@using X.PagedList.Mvc.Core;*@

@*@model IPagedList<StudentEntities.CustomEntities.StudentModel>
    <link href="~/css/StyleSheet.css" rel="stylesheet" />*@


<h1>DisplayStudentsList</h1>

<p>
    <a asp-controller="Home" asp-action="AddNewStudent">Add New Student</a>
</p>

@*@using (Html.BeginForm("Index", "Home"))*@
@using (Html.BeginForm())
{
    <p>
        Search Name: @Html.TextBox("Search_Data", ViewBag.FilterValue as string)
        <input type="submit" value="Find" />
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.ActionLink("StudentId", "Index", new { Sorting_Order = "Student_Id", Filter_Value = ViewBag.FilterValue })
            </th>
            <th>
                @Html.ActionLink("StudentName", "Index", new { Sorting_Order = "Student_Name", Filter_Value = ViewBag.FilterValue })
            </th>
            <th>
                StudentCity
            </th>
          
            <th>
                FathersName
            </th>
            <th>
                LastName
            </th>
            <th>
                Teachers Name
            </th>

            <th>
                College Name
            </th>




            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StudentId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentCity)
            </td>
          
            <td>
                @Html.DisplayFor(modelItem => item.FathersName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.TeacherName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CollegeName)
            </td>


            <td>
                @Html.ActionLink("Edit", "UpdateStudent", new { id = item.StudentId }) |
                @Html.ActionLink("Details", "DisplayIndividualStudent", new { id = item.StudentId }) |
                @Html.ActionLink("Delete", "DeleteStudent", new { id = item.StudentId }, new { onclick = "return confirm('Do you really want to delete?');" })
            </td>
        </tr>
        }
    </tbody>
</table>

<br />